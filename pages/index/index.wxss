.search{
  padding:20rpx;
  background-color: #ff2d4a;
}
.search-input{
  display: flex;
  justify-content: center;
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  background-color: #fff;
  border-radius: 4px;
  color: #666;
  font-size: 14px;
}
.search-input icon{
  display: block;
  margin-top: 10rpx;
  margin-right:10rpx;
  
}
