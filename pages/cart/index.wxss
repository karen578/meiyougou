page, .container {
  height: 100%;
  background-color: #f6f6f6;
}

.address {
  padding: 20rpx 0;
}

.address-people {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.phone {
  margin-left: 150rpx;
}

.addressInfo {
  padding: 0 0 20rpx 20rpx;
}

.address image {
  width: 750rpx;
  height: 15rpx;
}

.cart-detail {
  background-color: #fff;
}

.cart-title {
  padding: 20rpx;
  display: flex;
  border-bottom: 1px solid #eee;
}

.cart-title icon {
  margin-right: 20rpx;
}

.cart-contain {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}

.cart-contain .contain-left {
  width: 80rpx;
  flex-shrink: 0;
  text-align: center;
}

.contain-right {
  flex: 1;
  display: flex;
  
}

.right-image image {
  width: 140rpx;
  height: 180rpx;
}

.right-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 20rpx;
}

.right-text .goods-title {
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
}

.goods-bottom .num {
  display: flex;
  justify-content: space-around;
}
.goods-bottom .num .goods-btn{
 width: 60rpx;
 height: 50rpx;
 line-height: 50rpx;
 text-align: center;
  border: 2px solid #666;
}
.goods-bottom .num .goods-num{
  padding: 0 40rpx;
  line-height: 50rpx;
  font-size: 16px;
}
.goods-bottom .goods-price{
  color: #ff2d4a;
  font-size: 18px;
}
.footer{
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  font-size: 14px;
  
}
.footer-left{
  display: flex;
  line-height: 80rpx;
}
.footer-left icon{
  display: block;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.footer-middle text{
  font-size: 16px;
  color: #eb4450;
}
.footer-middle{
  margin-top: 10rpx;
  margin-left: 80rpx;
}
.footer-middle .yunfei{
  font-size: 12px;
  color: #ccc;
}
.accounts{
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #eb4450;
  color: #fff;
  }
